{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "tsconfig/base.json",
  "include": ["**/*.ts", "**/*.tsx", "../../packages/webview/vite.config.ts"],
  "exclude": ["**/node_modules"],
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["ESNext"],
    "target": "es2020",
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noEmit": true
  }
}
