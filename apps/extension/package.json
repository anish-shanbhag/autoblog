{
  "name": "@cryo/extension",
  "displayName": "Cryogen",
  "description": "",
  "version": "0.1.0",
  "main": "./dist/extension.cjs",
  "type": "module",
  "engines": {
    "vscode": "^1.61.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "cryogen.runLocalRecipe",
        "title": "Run a local Recipe",
        "category": "Cryogen"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cryogen",
          "title": "Cryogen",
          "icon": "media/snowflake.png"
        }
      ]
    },
    "views": {
      "cryogen": [
        {
          "id": "cryogen-diff-explorer",
          "type": "webview",
          "name": "Explorer",
          "icon": "media/snowflake.png"
        }
      ]
    }
  },
  "watch": {
    "files": "**/*.ts"
  },
  "scripts": {
    "dev": "node watch.js",
    "build": "rm -rf dist && tsc -p tsconfig.build.json && node esbuild.js && cp -r ../../packages/webview/dist dist/webview",
    "compile-tests": "tsc -p tsconfig.test.json && rm -rf test/out && node test.esbuild.js",
    "watch-tests": "tsc -p tsconfig.test.json -w --outDir out",
    "test": "yarn compile-tests && node test/out/runTest.cjs",
    "lint": "eslint . --fix",
    "lint-ci": "eslint .",
    "depcheck": "depcheck --skip-missing --ignores '@types/*,config,tsconfig,tslib'"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.68.0",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "@vscode/test-electron": "^2.1.3",
    "depcheck": "^1.4.3",
    "esbuild": "^0.15.14",
    "eslint": "^8.21.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "tslib": "^2.4.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@cryo/cli": "workspace:*",
    "@cryo/ui": "workspace:*"
  }
}
