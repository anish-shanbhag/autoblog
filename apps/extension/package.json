{
  "name": "@cryo/extension",
  "displayName": "Cryogen",
  "description": "",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.61.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cryogen.runLocalRecipe",
        "title": "Run a local Recipe",
        "category": "Cryogen"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cryogen",
          "title": "Cryogen",
          "icon": "media/snowflake.png"
        }
      ]
    },
    "views": {
      "cryogen": [
        {
          "id": "cryogen-diff-explorer",
          "type": "webview",
          "name": "Explorer",
          "icon": "media/snowflake.png"
        }
      ]
    }
  },
  "watch": {
    "files": "**/*.ts"
  },
  "scripts": {
    "dev": "vite",
    "watch": "node watch.js",
    "build": "vite build && rm -rf dist && tsc -p tsconfig.build.json && node esbuild.js",
    "compile-tests": "tsc -p tsconfig.test.json",
    "watch-tests": "tsc -p tsconfig.test.json -w --outDir out",
    "lint": "eslint . --fix",
    "lint-ci": "eslint .",
    "test": "yarn compile-tests && node ./out/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@types/vscode": "^1.68.0",
    "@types/vscode-webview": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "@vitejs/plugin-react-swc": "^3.0.1",
    "@vscode/test-electron": "^2.1.3",
    "esbuild": "^0.15.14",
    "eslint": "^8.21.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "vite": "^4.0.3",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "@cryo/cli": "workspace:*",
    "@cryo/ui": "workspace:*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
