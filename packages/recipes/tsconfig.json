{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "tsconfig/base.json",
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "compilerOptions": {
    "module": "esnext",
    "target": "es2022",
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "importHelpers": true
  }
}
