{
  "name": "cli",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Anish Shanbhag",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "scaffold": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json && node esbuild.js",
    "prepare-tests": "tsc -p tsconfig.test.json && yalc publish ../utils && yalc publish ../recipes && yalc publish",
    "test": "yarn prepare-tests && jest",
    "debug": "yarn prepare-tests && cross-env FULL_OUTPUT=1 node ../../node_modules/jest/bin/jest.js --runInBand 2>&1 | cat",
    "lint": "eslint . --fix",
    "lint-ci": "eslint ."
  },
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.4",
    "@types/semver": "^7.3.10",
    "@types/validate-npm-package-name": "^4.0.0",
    "config": "workspace:*",
    "cross-env": "^7.0.3",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.21.0",
    "jest": "^28.1.3",
    "ts-jest": "^28.0.7",
    "tsconfig": "workspace:*",
    "tslib": "^2.4.0",
    "yalc": "^1.0.0-pre.53"
  },
  "dependencies": {
    "@swc/core": "^1.2.223",
    "chalk": "^4.1.2",
    "commander": "^9.4.0",
    "esbuild": "^0.14.53",
    "ora": "^5.4.1",
    "recipes": "workspace:*",
    "semver": "^7.3.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "utils": "workspace:*",
    "validate-npm-package-name": "^4.0.0"
  }
}
